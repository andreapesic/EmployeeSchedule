@model IEnumerable<EmployeeSchedule.MVC.Models.Create.CompanyCreate>

@{
    ViewData["Title"] = "Companies";
}

<div class="base">
    <div class="row">
        <div class="col-sm-3">
            <a asp-action="Create" class="btn btn-outline-info">Create</a>
        </div>
    </div>
    <table id="dtBasicExample" class="table" cellspacing="0" width="100%">
        <thead class="table-head">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdentificationNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Adress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Domain)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody class="table-body">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdentificationNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Adress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Domain.Name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-light">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-success">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script>
    $(document).ready(function () {
        $('#dtBasicExample').DataTable();
        $('.dataTables_length').addClass('bs-select');
    });
</script>

@section Styles {
    <link rel="stylesheet" href="~/css/index.css" />
}