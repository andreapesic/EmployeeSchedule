@model EmployeeSchedule.MVC.Models.Create.ScheduleCreate

@{
    ViewData["Title"] = "Edit schedule";
}

<div class="base">
    <div class="row">
        <div class="col-md-6 title">
            <h1>Edit schedule</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Employee.Id" />
                <div class="form-group">
                    <label asp-for="Date" class="control-label"></label>
                    <input type="date" asp-for="Date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ShiftWork" class="control-label"></label>
                    <select asp-for="ShiftWork" asp-items="@Model.ShiftWorkSelectList" class="form-control">
                    </select>
                    <span asp-validation-for="ShiftWork" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Notification" class="control-label"></label>
                    <input type="text" asp-for="Notification" class="form-control" />
                    <span asp-validation-for="Notification" class="text-danger"></span>
                </div>
                <input type="text" asp-for="CheckInTime" class="form-control"  hidden />
                <div class="form-group">
                    <a asp-action="Index" class="btn btn-outline-info">Back to List</a>
                    <input type="submit" value="Edit" class="btn btn-info" />
                </div>
                @if (!string.IsNullOrEmpty(@Model.ValidationMessage))
                {
                    <div class="alert alert-info" role="alert">
                        @Model.ValidationMessage
                    </div>
                }
            </form>
        </div>
    </div>

</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

    @section Styles {
        <link rel="stylesheet" href="~/css/create.css" />
    }
